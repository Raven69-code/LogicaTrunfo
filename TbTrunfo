#include <stdio.h>    // Inclui a biblioteca padrão de entrada e saída
#include <string.h>   // Necessário para a função strcpy

// Estrutura para representar uma carta de cidade
typedef struct {
    char nome[50];
    char codigo[10]; // Adicionado para o código da cidade
    long long populacao;
    double area;         // Em km²
    double pib;          // Em bilhões de reais
    int num_pontos_turisticos; // Novo atributo
} CartaCidade;

int main() {
    // --- Cadastro das Cartas com seus dados fornecidos ---
    CartaCidade cartaRJ;
    strcpy(cartaRJ.nome, "Rio de Janeiro");
    strcpy(cartaRJ.codigo, "a01");
    cartaRJ.populacao = 6748000;
    cartaRJ.area = 1200.27;
    cartaRJ.pib = 380.00; // PIB em bilhões de reais
    cartaRJ.num_pontos_turisticos = 58;

    CartaCidade cartaSP;
    strcpy(cartaSP.nome, "Sao Paulo"); // Mantendo 'Sao Paulo' para consistência
    strcpy(cartaSP.codigo, "a02");
    cartaSP.populacao = 11452000;
    cartaSP.area = 1521.00;
    cartaSP.pib = 3500.00; // PIB em bilhões de reais
    cartaSP.num_pontos_turisticos = 50;

    // --- Exibição das informações iniciais (conforme seu rascunho) ---
    printf("--- Informacoes sobre o Rio de Janeiro ---\n");
    printf("Codigo: %s\n", cartaRJ.codigo);
    printf("Estado: %s\n", cartaRJ.nome); // Nome da cidade é o 'estado' neste contexto
    printf("Populacao: %lld habitantes\n", cartaRJ.populacao);
    printf("Tamanho: %.2f km2\n", cartaRJ.area);
    printf("PIB: R$ %.2f bilhoes\n", cartaRJ.pib);
    printf("Numero de pontos turisticos: %d\n", cartaRJ.num_pontos_turisticos);
    printf("\n");

    printf("--- Informacoes sobre Sao Paulo ---\n");
    printf("Codigo: %s\n", cartaSP.codigo);
    printf("Estado: %s\n", cartaSP.nome); // Nome da cidade é o 'estado' neste contexto
    printf("Populacao: %lld habitantes\n", cartaSP.populacao);
    printf("Tamanho: %.2f km2\n", cartaSP.area);
    printf("PIB: R$ %.2f bilhoes\n", cartaSP.pib);
    printf("Numero de pontos turisticos: %d\n", cartaSP.num_pontos_turisticos);
    printf("\n"); // Adiciona uma linha em branco para separar as informações

    // --- Escolha do Atributo de Comparação ---
    int escolha;
    printf("Escolha o atributo para comparar:\n");
    printf("1. Populacao\n");
    printf("2. Area\n");
    printf("3. PIB\n");
    printf("4. Numero de pontos turisticos\n"); // Nova opcao
    printf("Digite o numero da sua escolha: ");
    scanf("%d", &escolha);

    // --- Comparação de Cartas e Exibição dos Resultados ---
    printf("\n--- Comparacao de Cartas ---\n");
    printf("Carta 1: %s\n", cartaSP.nome);
    printf("Carta 2: %s\n", cartaRJ.nome);
    printf("----------------------------\n");

    switch (escolha) {
        case 1: // Populacao
            printf("Atributo escolhido: Populacao\n");
            printf("%s: %lld habitantes\n", cartaSP.nome, cartaSP.populacao);
            printf("%s: %lld habitantes\n", cartaRJ.nome, cartaRJ.populacao);

            if (cartaSP.populacao > cartaRJ.populacao) {
                printf("Vencedor: %s (Maior Populacao)\n", cartaSP.nome);
            } else if (cartaRJ.populacao > cartaSP.populacao) {
                printf("Vencedor: %s (Maior Populacao)\n", cartaRJ.nome);
            } else {
                printf("Empate em Populacao!\n");
            }
            break;

        case 2: // Area
            printf("Atributo escolhido: Area\n");
            printf("%s: %.2f km2\n", cartaSP.nome, cartaSP.area);
            printf("%s: %.2f km2\n", cartaRJ.nome, cartaRJ.area);

            if (cartaSP.area > cartaRJ.area) {
                printf("Vencedor: %s (Maior Area)\n", cartaSP.nome);
            } else if (cartaRJ.area > cartaSP.area) {
                printf("Vencedor: %s (Maior Area)\n", cartaRJ.nome);
            } else {
                printf("Empate em Area!\n");
            }
            break;

        case 3: // PIB
            printf("Atributo escolhido: PIB (em bilhoes de reais)\n");
            printf("%s: R$ %.2f bilhoes\n", cartaSP.nome, cartaSP.pib);
            printf("%s: R$ %.2f bilhoes\n", cartaRJ.nome, cartaRJ.pib);

            if (cartaSP.pib > cartaRJ.pib) {
                printf("Vencedor: %s (Maior PIB)\n", cartaSP.nome);
            } else if (cartaRJ.pib > cartaSP.pib) {
                printf("Vencedor: %s (Maior PIB)\n", cartaRJ.nome);
            } else {
                printf("Empate em PIB!\n");
            }
            break;

        case 4: // Numero de pontos turisticos
            printf("Atributo escolhido: Numero de pontos turisticos\n");
            printf("%s: %d pontos\n", cartaSP.nome, cartaSP.num_pontos_turisticos);
            printf("%s: %d pontos\n", cartaRJ.nome, cartaRJ.num_pontos_turisticos);

            if (cartaSP.num_pontos_turisticos > cartaRJ.num_pontos_turisticos) {
                printf("Vencedor: %s (Mais pontos turisticos)\n", cartaSP.nome);
            } else if (cartaRJ.num_pontos_turisticos > cartaSP.num_pontos_turisticos) {
                printf("Vencedor: %s (Mais pontos turisticos)\n", cartaRJ.nome);
            } else {
                printf("Empate em pontos turisticos!\n");
            }
            break;

        default:
            printf("Escolha invalida. Por favor, selecione 1, 2, 3 ou 4.\n");
            break;
    }

    return 0;
}